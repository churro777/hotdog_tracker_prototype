#!/bin/sh
# Check commit message format
if ! npx --no -- commitlint --edit "$1"; then
  echo ""
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "‚úÖ Required format: <type>: <description>"
  echo ""
  echo "üìù Valid types:"
  echo "  ‚Ä¢ feat:     new feature"
  echo "  ‚Ä¢ fix:      bug fix"
  echo "  ‚Ä¢ docs:     documentation"
  echo "  ‚Ä¢ style:    formatting, missing semi colons, etc"
  echo "  ‚Ä¢ refactor: code refactoring"
  echo "  ‚Ä¢ perf:     performance improvement"
  echo "  ‚Ä¢ test:     adding tests"
  echo "  ‚Ä¢ chore:    maintenance tasks"
  echo "  ‚Ä¢ ci:       CI/CD changes"
  echo "  ‚Ä¢ build:    build system changes"
  echo "  ‚Ä¢ revert:   reverting changes"
  echo ""
  echo "üí° Examples:"
  echo "  ‚Ä¢ feat: add user authentication"
  echo "  ‚Ä¢ fix: resolve navigation bug"
  echo "  ‚Ä¢ chore: update dependencies"
  echo "  ‚Ä¢ ci: fix deployment pipeline"
  echo ""
  echo "üìñ Learn more: https://conventionalcommits.org/"
